#!/usr/bin/bash
MINUID=1000
CAN_REBOOT=false 

NUMUSERS=$( /usr/local/bin/listusers | wc -l )
if [ "$NUMUSERS" -eq 0 ]; then 
    CAN_REBOOT=true 
fi

if [ $CAN_REBOOT ]; then 
    echo 'No users logged in, schedueling reboot'
    wall "Shutting down in 1 minute to apply updates"
    /bin/shutdown -r 
else
    echo 'Users logged in, abborting reboot'
fi
#    sys.exit(1)
