[logging]
 default = FILE:/var/log/krb5libs.log
 kdc = FILE:/var/log/krb5kdc.log
 admin_server = FILE:/var/log/kadmind.log

[libdefaults]
 default_realm = {{ kerberos.realm | capitalize}}
 dns_lookup_realm = false
 dns_lookup_kdc = false
 ticket_lifetime = 24h
 forwardable = yes

[realms]
 {{ kerberos.realm | capitalize }} = {
 {% for kdc in kerberos.kdc %}
  kdc = {{ kdc }}
 {% endfor %}
  admin_server = {{ kerberos.admin_server }}
 }

[domain_realm]
 .{{ kerberos.realm | capitalize }} = {{ kerberos.realm | upper }}
 {{ kerberos.realm | capitalize }} = {{ kerberos.realm | upper }}
 .{{ kerberos.realm }} = {{ kerberos.realm | upper }}
 {{ kerberos.realm }} = {{ kerberos.realm | upper }}

[appdefaults]
 pam = {
   debug = true
   ticket_lifetime = 36000
   renew_lifetime = 36000
   forwardable = true
   krb4_convert = false
 }
