[Trigger]
Operation = Install 
Operation = Upgrade
Operation = Remove 
Type = File
Target = usr/lib/initcpio/* 
Target = usr/lib/modules/*
Target = boot/*-ucode.img

[Action]
Description = Creates /reboot-required if kernel or initramfs changes 
When = PostTransaction
Exec = /bin/sh -c 'touch /reboot-required'
